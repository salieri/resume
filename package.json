{
  "name": "@faust/workspace",
  "version": "0.1.0",
  "root": true,
  "private": true,
  "license": "MIT",
  "packageManager": "pnpm@10.18.1+sha512.77a884a165cbba2d8d1c19e3b4880eee6d2fcabd0d879121e282196b80042351d5eb3ca0935fa599da1dc51265cc68816ad2bddd2a2de5ea9fdf92adbec7cd34",
  "scripts": {
    "lint": "pnpm --recursive --aggregate-output lint && tflint --chdir ./ops/infra",
    "lint:ci": "pnpm --recursive --aggregate-output lint:ci && tflint --chdir ./ops/infra",
    "lint:fix": "pnpm --recursive --aggregate-output lint:fix && terraform -chdir=./ops/infra fmt && tflint --chdir ./ops/infra --fix",
    "build": "pnpm --recursive --aggregate-output build",
    "test": "pnpm --recursive --aggregate-output test",
    "test:ci": "pnpm --recursive --aggregate-output test:ci",
    "test:cov": "pnpm --recursive --aggregate-output test:cov",
    "clean": "pnpm --recursive --aggregate-output clean",
    "clean:pristine": "pnpm clean && pnpm clean:node_modules && rm -rf node_modules package-lock.json && pnpm install && pnpm build",
    "clean:node_modules": "find . -path '*/node_modules/*' -delete && rm -rf node_modules",
    "postinstall": "patch-package"
  },
  "engines": {
    "node": "^24.0.0",
    "pnpm": "10.18.1"
  },
  "overrides": {
  },
  "dependencies": {
    "patch-package": "catalog:"
  },
  "devDependencies": {}
}
