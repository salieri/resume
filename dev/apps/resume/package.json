{
  "name": "@aleksi/resume",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "build": "pnpm clean && tsc --noEmit && react-router build",
    "clean": "rm -rf ./dist",
    "dev": "react-router dev --port 3030 --host 0.0.0.0",
    "eslint": "eslint . --cache",
    "generate:pdf": "./scripts/pdf/generate-pdf.sh",
    "i18n:extract": "rm -rf ./src/i18n/locales/en && i18next-cli extract",
    "i18n:translate": "tsx ./scripts/translation/cli.ts",
    "lint": "pnpm eslint && pnpm stylelint && i18next-cli lint",
    "lint:ci": "pnpm eslint --quiet && pnpm stylelint --quiet && i18next-cli lint",
    "lint:fix": "pnpm eslint --fix && pnpm stylelint --fix",
    "prepublishOnly": "pnpm build",
    "preview": "vite preview",
    "prod": "serve --listen tcp://0.0.0.0:3131 --cors './dist/client'",
    "start": "react-router-serve ./build/server/index.js",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "stylelint": "stylelint '**/*.css' --cache",
    "test": "vitest run",
    "test:ci": "pnpm test:cov",
    "test:cov": "pnpm test --coverage",
    "test:watch": "vitest",
    "typecheck": "react-router typegen && tsc --noEmit",
    "vitest": "vitest run",
    "vitest:watch": "vitest"
  },
  "dependencies": {
    "@faust/llm-utils": "workspace:",
    "@faust/theme": "workspace:",
    "@mantine/code-highlight": "catalog:",
    "@mantine/core": "catalog:",
