    "i18next": "catalog:",
    "i18next-resources-to-backend": "catalog:",
    "lodash": "catalog:",
    "modern-async": "catalog:",
    "recharts": "catalog:",
    "react": "catalog:",
    "react-dom": "catalog:",
    "react-i18next": "catalog:",
    "react-markdown": "catalog:",
    "react-router": "catalog:",
    "serialize-error": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@faust/eslint-config": "workspace:",
    "@faust/logger": "workspace:",
