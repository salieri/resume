{
  "name": "@faust/release-scripts",
  "version": "0.1.0",
  "description": "Release utilities (LLM-backed release notes, tagging helpers)",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js"
  },
  "private": true,
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm clean && tsc -p ./tsconfig.build.json",
    "clean": "rm -rf ./dist ./coverage ./docs",
    "release:notes": "tsx ./scripts/release-notes/cli.ts",
    "lint": "eslint --ext .js,.ts .",
    "lint:ci": "pnpm lint --quiet",
    "lint:fix": "pnpm lint --fix",
    "prepublishOnly": "pnpm build",
    "test": "vitest run",
    "test:ci": "pnpm test:cov",
    "test:cov": "pnpm test --coverage",
    "test:watch": "vitest",
    "fix:pr": "tsx ./scripts/fix-pr/cli.ts",
    "watch": "tsc -p ./tsconfig.build.json --watch"
  },
  "license": "UNLICENSED",
  "dependencies": {
    "@openrouter/sdk": "catalog:",
    "commander": "catalog:",
    "modern-async": "catalog:",
    "octokit": "catalog:",
    "serialize-error": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@faust/eslint-config": "workspace:",
    "@openai/codex": "catalog:",
    "@types/node": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "eslint": "catalog:",
    "typescript": "catalog:",
    "tsx": "catalog:",
    "vitest": "catalog:"
  },
  "engines": {
    "node": ">=24.0.0"
  }
}
