{
  "name": "@faust/react-template",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "build": "react-router build",
    "clean": "rm -rf ./dist",
    "dev": "react-router dev",
    "eslint": "eslint . --cache",
    "lint": "pnpm run eslint && pnpm run stylelint",
    "lint:ci": "pnpm run eslint -- --quiet && pnpm run stylelint -- --quiet",
    "lint:fix": "pnpm run eslint --fix && pnpm run stylelint --fix",
    "prepublishOnly": "pnpm run build",
    "preview": "vite preview",
    "start": "react-router-serve ./build/server/index.js",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "stylelint": "stylelint '**/*.css' --cache",
    "test": "pnpm run vitest",
    "typecheck": "react-router typegen && tsc --noEmit",
    "vitest": "vitest run",
    "vitest:watch": "vitest"
  },
  "dependencies": {
    "@faust/theme": "workspace:",
    "@mantine/code-highlight": "catalog:",
    "@mantine/core": "catalog:",
    "@mantine/dropzone": "catalog:",
    "@mantine/hooks": "catalog:",
    "@mantine/notifications": "catalog:",
    "@react-router/dev": "catalog:",
    "@react-router/node": "catalog:",
    "@react-router/serve": "catalog:",
    "@tabler/icons-react": "catalog:",
    "hyphen": "catalog:",
    "isbot": "^5",
    "lodash": "catalog:",
    "react": "catalog:",
    "react-dom": "catalog:",
    "react-markdown": "catalog:",
    "react-router": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@faust/eslint-config": "workspace:",
    "@storybook/addon-themes": "catalog:",
    "@storybook/react": "catalog:",
    "@storybook/react-vite": "catalog:",
    "@testing-library/dom": "catalog:",
    "@testing-library/jest-dom": "catalog:",
    "@testing-library/react": "catalog:",
    "@testing-library/user-event": "catalog:",
    "@types/hyphen": "catalog:",
    "@types/lodash": "catalog:",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "@types/node": "catalog:",
    "@vitejs/plugin-react": "catalog:",
    "eslint": "catalog:",
    "globals": "catalog:",
    "identity-obj-proxy": "catalog:",
    "jsdom": "catalog:",
    "postcss": "catalog:",
    "postcss-preset-mantine": "catalog:",
    "postcss-simple-vars": "catalog:",
    "prop-types": "catalog:",
    "sass-embedded": "catalog:",
    "storybook": "catalog:",
    "stylelint": "catalog:",
    "stylelint-config-standard-scss": "catalog:",
    "typescript": "catalog:",
    "vite": "catalog:",
    "vite-tsconfig-paths": "catalog:",
    "vitest": "catalog:"
  },
  "engines": {
    "node": ">=24.0.0"
  }
}
