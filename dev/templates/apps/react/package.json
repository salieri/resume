{
  "name": "@faust/react-template",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "build": "tsc && vite build",
    "clean": "rm -rf ./dist",
    "dev": "vite",
    "eslint": "eslint . --cache",
    "lint": "pnpm eslint && pnpm stylelint",
    "lint:ci": "pnpm eslint --quiet && pnpm stylelint --quiet",
    "lint:fix": "pnpm eslint --fix && pnpm stylelint --fix",
    "prepublishOnly": "pnpm build",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "stylelint": "stylelint '**/*.css' --cache",
    "test": "vitest run",
    "test:ci": "pnpm test:cov",
    "test:cov": "pnpm test --coverage",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "vitest": "vitest run",
    "vitest:watch": "vitest"
  },
  "dependencies": {
    "@faust/theme": "workspace:",
    "@mantine/code-highlight": "catalog:",
    "@mantine/core": "catalog:",
    "@mantine/dropzone": "catalog:",
    "@mantine/hooks": "catalog:",
    "@mantine/notifications": "catalog:",
    "@tabler/icons-react": "catalog:",
    "hyphen": "catalog:",
    "lodash": "catalog:",
    "react": "catalog:",
    "react-dom": "catalog:",
    "react-markdown": "catalog:",
    "react-router": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@faust/eslint-config": "workspace:",
    "@storybook/addon-themes": "catalog:",
    "@storybook/react-vite": "catalog:",
    "@testing-library/dom": "catalog:",
    "@testing-library/jest-dom": "catalog:",
    "@testing-library/react": "catalog:",
    "@testing-library/user-event": "catalog:",
    "@types/hyphen": "catalog:",
    "@types/lodash": "catalog:",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "@types/node": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "@vitejs/plugin-react": "catalog:",
    "eslint": "catalog:",
    "globals": "catalog:",
    "identity-obj-proxy": "catalog:",
    "jsdom": "catalog:",
    "postcss": "catalog:",
    "postcss-preset-mantine": "catalog:",
    "postcss-simple-vars": "catalog:",
    "prop-types": "catalog:",
    "sass-embedded": "catalog:",
    "storybook": "catalog:",
    "stylelint": "catalog:",
    "stylelint-config-standard-scss": "catalog:",
    "typescript": "catalog:",
    "vite": "catalog:",
    "vite-tsconfig-paths": "catalog:",
    "vitest": "catalog:"
  },
  "engines": {
    "node": ">=24.0.0"
  }
}
