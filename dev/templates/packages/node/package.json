{
  "name": "@template/npm-package",
  "version": "0.1.0",
  "description": "NPM Package Template",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js"
  },
  "private": true,
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run clean && tsc -p ./tsconfig.build.json",
    "clean": "rm -rf ./dist ./coverage ./docs",
    "docs": "rm -rf docs && npx typedoc --out docs --tsconfig ./tsconfig.build.json",
    "lint": "eslint --ext .js,.ts .",
    "lint:ci": "npm run lint -- --quiet",
    "lint:fix": "npm run lint -- --fix",
    "prepublishOnly": "npm run build",
    "test": "vitest run",
    "test:ci": "npm run test:cov --",
    "test:cov": "npm run test -- --coverage",
    "test:watch": "vitest",
    "watch": "tsc -p ./tsconfig.build.json --watch"
  },
  "license": "UNLICENSED",
  "dependencies": {
    "lodash": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@faust/eslint-config": "workspace:",
    "@types/lodash": "catalog:",
    "typescript": "catalog:",
    "tsx": "catalog:",
    "vitest": "catalog:"
  },
  "engines": {
    "node": ">=24.0.0"
  }
}
